.nav(ng-init="initialize()")
  .nav-container
    .header-left.pull-left
      img.logo(src="../images/blt_logo.png", ng-click="gotoPage(0)")
    .header-right.pull-right
      nav.menu
        ul.navi_menu
          li.menu_item.pull-left
            a.menu_link(ng-click="scrollTo('page-1')") {{ 'HOME' | translate }}
          li.menu_item.pull-left
            a.menu_link(ng-click="scrollTo('page-2')") {{ 'TEAM' | translate }}
          li.menu_item.pull-left
            a.menu_link(ng-click="scrollTo('page-3')") {{ 'SERVICE' | translate }}
          li.menu_item.pull-left
            a.menu_link(href="#") {{ 'BLOG' | translate }}
          li.menu_item 
            a.menu_link(ng-click="scrollTo('page-4')") {{ 'CONTACTUS' | translate }}
      .social
        .btns
          a.btn.btn-fb(href="https://www.facebook.com/tomoniapp")
          a.btn.btn-twt(href="https://twitter.com/tomoniapp")
      .language
          a.lang.lang-en(ng-click="languageChange('us')") Eng
          span |
          a.lang.lang-ko(ng-click="languageChange('kr')") Kor

